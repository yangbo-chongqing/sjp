/* subPages/beautystreet/beautystreet.wxss */
page{
  background: #f5f5f5;
}
.scroll{
  white-space: nowrap;
  border-bottom:4rpx solid #f5f5f5;
  overflow: hidden;
  background: #fff;

}
.scrollbox{
  padding:20rpx 0;
  /* display: flex;
  flex-wrap: nowrap; */
}
.scrollitem{
  display: inline-block;
 width:25%;
 text-align: center;
 font-size:30rpx;

}
.active{
  /* border-bottom:2rpx solid #d33333; */
  color:#D33333;
 font-weight: bold;

  position: relative;
}
.active::after{
  content:'';
  position: absolute;
  bottom:0;
  left:50%;
  transform: translate(-50%);
  width:150rpx;
  height:8rpx;
  border-radius: 8rpx;
  background: rgba(211, 51, 51, 0.5);
}
.contentbox{
  background: #fff;
  padding:0 30rpx 30rpx;
  border-bottom:15rpx solid #f5f5f5;

}
.contentitem{

}
.itemtitle{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color:#8A8A8A;
  padding:20rpx 0;

}
.itemtitle>text:first-child{
  flex: 1;
  font-weight: bold;
  color:#333;
}
.itemtitle>text:last-child{
  font-size:26rpx;
}
.contentpic{
  display: flex;
  justify-content: space-between;
}
.contentpic>image{
  width:49%;
  display: block;
  height:230rpx;
}