/* subPages/dangPhoto/dangPhoto.wxss */
.photo{
  border-top: 1px solid #f5f5f5;
}
.photo-main-title{
  display: block;
  margin: 36rpx 46rpx 36rpx 30rpx;
}
.photo-main>image:nth-child(2){
  width: 345px;
  height: 178px;
  display: block;
  margin: auto;
}
.picker{
  padding: 20rpx 0 20rpx 40rpx;
}
.photo-main-details{
  height: 126rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* .photo-main-details>view:first-child,
