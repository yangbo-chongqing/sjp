.detailbox{
  padding:30rpx;
}
.detailtitle{
  font-size:48rpx;
  color:#444;
  margin-bottom:20rpx;

  font-weight: bold;
}
.detailitem{
  line-height: 200%;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  color:#8A8A8A;
  font-size: 28rpx;
}
.borderbot{
  border-bottom:2rpx solid #f5f5f5;
  padding-bottom:20rpx;
}
.detailitem>text{
  color:#333;
}
.dui{
  color:#333;
  font-size: 28rpx;
}

.detailitem>text:first-child{
  /* flex: 1; */
  font-size: 28rpx;
  width: 61%;
  margin-right: 55rpx;
}
.richcontent{
  width:100%;
  margin-top:40rpx;
  border-top:2rpx solid #f5f5f5;
  padding-top:20rpx;
}
.detailitem .status{
  color:#d33333;
  border:1rpx solid #d33333;
  font-size: 24rpx;
  display: block;
  line-height: 100%;
  padding:5rpx 10rpx;
  height: 30rpx;
}
