/* subPages/train/train.wxss */
.train{
  border-top: 1px solid #f5f5f5;
}
.list-main{
  /* margin: 32rpx 32rpx 34rpx 30rpx; */
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx 30rpx 40rpx 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.train-list image{
  width: 220rpx;
  height: 160rpx;
  border-radius: 4rpx;
}
.train-list-detail{
  /* display: inline-block; */
  width: 446rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.train-list-detail>view:first-child{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin-left: 22rpx;
  margin-bottom: 9rpx;
}
.train-list-detail>text{
  width: 446rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  margin-left: 22rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.train-list-detail>view:nth-child(2){
  height: 42rpx;
}
.train-list-detail .train-time{
  color: #8a8a8a;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.train-order{
  margin-left: 24rpx;
  color: #8a8a8a;
  font-size: 24rpx;
  line-height: 42.5rpx;
}
.train-order>text{
  color: #d33333;
  font-size: 20rpx;
}
.line{
  width: 95%;
  height: 1px;
  background: #f5f5f5;
  margin: auto;
}
.read{
  display: flex;
  justify-content: space-between;
  align-items: center;
}