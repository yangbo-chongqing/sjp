/* subPages/addlog/addlog.wxss */
page {
  background: #f5f5f5;
}

.needone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 30rpx 0 0;
  height: 90rpx;
  font-size: 28rpx;
  margin-left: calc(30/10.8*1vh);
  border-bottom:2rpx solid #f5f5f5
}

.line {
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
}

.needone>view:first-child>text:first-child {
  color: #d33333;
}

.needone>view:first-child>text:last-child {
  color: #999;
}

.needone>input {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
}
.needone>picker {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  color:#48484A;

}
.nothing{
  color:#999;
}
.textinfo{
  border-top:20rpx solid #f5f5f5;
  border-bottom:20rpx solid #f5f5f5;

  padding:0 30rpx 30rpx;
}
.texttitle{
  padding:20rpx 0;
  font-size: 28rpx;
  color:#999;
}
.texttitle>text:first-child{
  color:#d33333;
}
.textcontent{
  width:95%;
  height:200rpx;
  margin: 0 auto;
  /* border:1px solid #f5f5f5; */
  font-size: 28rpx;
  /* padding:20rpx; */
  box-sizing: border-box;
}
.top0{
  border-top:0;
}
.imgall{
  /* padding:20rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  
}
.imgall>.imgone{
  width:200rpx;
  height:150rpx;
   /* margin: 30rpx 10rpx; */
   display: flex;
   justify-content: flex-start;
   box-sizing: border-box;
   margin-right:30rpx;
  
}
.imgall>view>image{
  display: block;
  width:100%;
  height:100%;
  /* margin-right:20rpx; */

}
.imgall>.imgone:last-child{
  margin-right:0;

}
.add{
  width:200rpx;
  height:150rpx;
  border: 1px dotted #666;
  color:#666;
  font-size:80rpx;
  text-align: center;
  line-height: 150rpx;


}
.add>view{
  font-size:40rpx;
}

.imgone{
  position: relative;
}
.del{
  position: absolute;
  top:-15rpx;
  right:-15rpx;
  font-size:30rpx;
}
.subbtn{
  /* background: transparent; */
  width:516rpx;
  height:88rpx;
  background: #d33333;
  border-radius:0;
  line-height: 88rpx;
  text-align: center;
  font-size:32rpx;
  color:#fff;
  font-weight: normal;
  padding: 0;
  margin:40rpx auto 0;
}
.picker{
  color: #999;
}