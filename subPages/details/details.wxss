/* subPages/yaowen/details/details.wxss */
.details{
  border-top: 1px solid #f5f5f5;
}
.details-top{
  margin: 16rpx 30rpx 20rpx 30rpx;
}
.details-top .details-title{
  font-family: PingFang SC;
  font-size: 48rpx;
  color: #000;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.details-user{
  margin-top: 32rpx;
}
.details-user image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  vertical-align: sub;
}
.details-user .details-user-name{
  display: inline-block;
  margin-left: 24rpx;
}
.details-user-name>view:first-child{
  font-size: 28rpx;
  color: #000;
  margin-bottom: 16rpx;
}
.details-user-time{
  font-size: 20rpx;
  color: #999;
}
.details-user>view:first-child,
.details-user>view:last-child{
  display: inline-block;
}
.details-user>view:last-child{
  float: right;
  color: #999;
  font-size: 20rpx;
}
.details-user>view:last-child>text{
  color: #d33333;
}
.line{
  width: 85%;
  height: 1px;
  margin: auto;
  background: #f5f5f5;
  padding: 0 28rpx;
}
.details-main{
  margin-top: 22rpx;
}
/* .details-main>view{
