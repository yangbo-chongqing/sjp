}
.activitTop{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 30rpx 30rpx;
  margin:20rpx 0 0 0;
  border-bottom:2rpx solid #f5f5f5;

}
.activitTop>image{
  width:88rpx;
  height:88rpx;
  border-radius: 50%;
  display: block;
  margin-right: 20rpx;
}
.createInfo{
  flex: 1;
  display: flex;
  flex-direction:column;
  justify-content: space-between; 
}
.createName{
  font-size:28rpx;
  color:#000;
}
.createTime{
  font-size:24rpx;
color:#999;
}
.joinNum{
  font-size:24rpx;
}
.joinNum>text{
  color:#D33333;
}
.content{
  padding:30rpx;
}
.timedowm{
  position: fixed;
  top:200rpx;
  right:30rpx;
  width:120rpx;
  height:60rpx;
  border-radius: 48rpx;
  background: rgba(221, 221, 221, 0.4);
  color:#D33333;
  text-align: center;
  line-height: 60rpx;
  font-size: 40rpx;
}