.page{
  background: #f5f5f5;
}
.newsDetails{
  padding: 4rpx 30rpx;
  background: #ffffff;
}
.eleganbox{
  width: 100%;
  height: 270rpx;
}
.eleganbox .elegantext{
  width: 100%;
  height: 146rpx;
  line-height: 73rpx;
}
.elegantext text{
  font-size: 32rpx;
  color: #444444;
}
.elenganPortrait{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
}
.elenganPortrait .portext{
  width: 100%;
  margin-top: 20rpx;
}
.portext .firstText{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.portext .firstText text:nth-child(1){
  font-size: 28rpx;
  color: #444444;
}
.portext .firstText .mintext{
  font-size: 24rpx;
  color: #999999;
}
.portext .firstText .mintext text{
  font-size: 24rpx;
  color: #D33333;
}
.portext .lastText{
  width: 100%
}
.portext .lastText text{
  font-size: 24rpx;
  color: #999999;
}
.detailContent{
  width: 100%;
  padding: 60rpx 0 0 0;
}
.detailContent .textde{
  font-size: 32rpx;
  color: #444444;
  text-indent:2em;
}
.detailContent .dataimges{
  width: 100%;
  height: 210rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}
.detailContent .dataimges image{
  width: 100%;
}
.detailContent .textdes{
  font-size: 32rpx;
  color: #444444;
  text-indent:4em;
}