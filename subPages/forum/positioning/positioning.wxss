/* subPages/forum/positioning/positioning.wxss */
page{
  background: #f5f5f5;
}
.positioning{
  width: 100%;
  margin-top: 16rpx;
}
.positioning .posibox{
  width: 100%;
  background: #ffffff;
  box-sizing: border-box;
}
  .toporg{
   padding: 36rpx 36rpx 0rpx 36rpx;
   display: flex;
   align-items: center;
 }
  .toporg text:nth-child(1){
   margin-right: 12rpx;
 }
  .toporg .textolor{
    font-weight: 600;
    font-size: 28rpx;
    color: #D33333;
  }
  .oneorg .textporg{
    padding: 0 30rpx;
    box-sizing: border-box;
  }
 .iconfont{
  font-size: 36rpx;
  vertical-align: middle;
  color: #d33333;
  margin-right: 10rpx;
}
  .oneorg{
    font-size: 28rpx;
    color: #444444;
  }
  .posibox .oneorg .topboder{
    border-bottom: 2rpx solid #f5f5f5; 
    padding-bottom: 12rpx;
  }
 .positioning .onebox{
    background: #ffffff;
  }
  .report{
  background: #FFFFFF; 
}
.report .lis{
  width: 100%;
  padding: 36rpx 30rpx 40rpx 30rpx;
  display: flex;
  justify-content: left;
  border-bottom: 2rpx solid #f5f5f5;
}
.report .lis .imagebox{
  width: 220rpx;
  height: 172rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.report .lis .textbox{
  width: 446rpx;
  margin-left: 24rpx;
}
.report .lis .textbox .text-view{
  margin-bottom: 23.8rpx;
}
.report .lis .textbox .text-view text{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.report .lis .textbox .text-vew text{
  font-size: 24rpx;
  color: #444444;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing:5rpx;
}
.report .lis .textsbox{
  color: #8a8a8a;
  font-size: 24rpx;
  width: 100%;
  display: flex;
  justify-content:space-between;
  /* padding: 24rpx 0 0 0; */
  margin-top: 65rpx;
}
.report .lis .textsbox text:nth-child(1){
  width: 270rpx;
  color: #8A8A8A;
  font-size: 24rpx;
  display: inline-block;
  margin-bottom: 23.8rpx;
}
.report .lis .textsbox text:nth-child(2){
  color: #8A8A8A;
  font-size: 24rpx;
}
.text-vew{
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
