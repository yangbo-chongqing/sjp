/* subPages/forum/learning/learning.wxss */
page{
  background: #f2f2f2;
}
.navigation{
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content:space-between;
  top: 0;
  left: 0;
  background: #FFFFFF;
}
.nav-text{
  width: 50%;
  text-align: center;
  line-height: 88rpx;
  position: relative;
}
 .nav-text text{
   font-size: 28rpx;
   color: #444444;
 }
 .nav-text view{
   width: 60rpx;
   height: 8rpx;
   background: #D33333;
   border-radius: 8rpx;
   position: absolute;
   left: 0;
   right: 0;
   bottom: 8rpx;
   margin: auto;
   display: none;
 }
 .actve text{
   font-size: 28rpx;
   font-weight: 600;
   color: #D33333; 
 }
 .nav-text.actve view{
   display: block;
 }
 /* 主题党日 */
 .learning .report{
  background: #FFFFFF;
  /* margin-top: 16rpx;   */
}
.report .lis{
  width: 100%;
  padding: 40rpx 30rpx 22rpx 30rpx;
  display: flex;
  justify-content: left;
  border-bottom: 2rpx solid #f5f5f5;
}
.report .lis .imagebox{
  width: 220rpx;
  height: 172rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.report .lis .textbox{
  width: 446rpx;
  margin-left: 24rpx;
}
  
.report .lis .textbox .text-view text{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.report .lis .textbox .text-vew{
  width: 100%;
  height: 68rpx;
  padding: 11.9rpx 0 11.9rpx 0;
}
.report .lis .textbox .text-vew view{
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing:5rpx;
}
.report .lis .textsbox{
  width: 100%;
  display: flex;
  justify-content:space-between;
}
.report .lis .textsbox text:nth-child(1){
  color: #8a8a8a;
  font-size: 24rpx;
  display: inline-block;
  margin-top: 12rpx;
}
.report .lis .textsbox text:nth-child(2){
  color: #8A8A8A;
  font-size: 24rpx;
}