/* subPages/residentvoice/residentvoice.wxss */

page {
  background: #f5f5f5;
}

.voiceitem {
  border-top: 15rpx solid #f5f5f5;
  height: 236rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.voicetitle {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: bold;
}

.intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #8a8a8a;
  height: 80rpx;
}

.voicetime {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #8a8a8a;
}

.voicestatus {
  width: 144rpx;
  height: 60rpx;
  color: #fff;
  border-radius: 48rpx;
  text-align: center;
  line-height: 60rpx;
}
.color1{
  background: #d33333;

}
.color2{
  background: #ffa200;

}
.color3{
  background: #E6E6E6;

}

.addvoice {
  width: 86rpx;
  height: 86rpx;
  background: #d33333;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.addvoice>text {
  font-size: 45rpx;
}
