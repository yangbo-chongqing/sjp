/* subPages/residentvoice/residentvoice.wxss */

page {
  background: #f5f5f5;
}

.voiceitem:nth-child(3) {
  border-top: 0rpx
}

.voiceitem {
  border-top: 15rpx solid #f5f5f5;
  height: 236rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.picker {
  font-size: 36rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 18rpx 0 18rpx 30rpx;
  font-weight:500;
}
.line{
  height: 2rpx;
  margin: 0 20rpx;
  width: 710rpx;
  box-sizing: border-box;
  background-color: #8a8a8a;
}

.ifont {
  width: 18rpx;
  height: 18rpx;
  margin-right: 8rpx;
  margin-top: 12rpx;
}

.voicetitle {

  display: flex;
  justify-content: space-between;
}

.voicetitle>text:first-child {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: bold;
}

.newslist {
  display: flex;
  font-size: 32rpx;
  background: #fff;
  padding: 30rpx 20rpx;
  margin-top: 10rpx
}

.voicetitle>text:last-child {
  color: #d33333;
  font-size: 28rpx;
}

.intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #8a8a8a;
  height: 80rpx;
}

.change {
  z-index: 999;
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  /* margin-bottom:15rpx; */
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 15rpx solid #f5f5f5;
}

.active {
  font-weight: 600;
  color: #d33333;
  position: relative;
}

.active:after {
  content: "";
  width: 60rpx;
  height: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx 0;
  background: #d33333;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translate(-50%);
}

.voicetime {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #8a8a8a;
}

.voicestatus {
  width: 144rpx;
  height: 60rpx;
  color: #fff;
  border-radius: 48rpx;
  text-align: center;
  line-height: 60rpx;
}

.color1 {
  background: #d33333;

}

.color2 {
  background: #ffa200;

}

.color3 {
  background: #E6E6E6;

}

.addvoice {
  width: 86rpx;
  height: 86rpx;
  background: #d33333;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.addvoice>text {
  font-size: 45rpx;
}

.titlefont {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  width: 685rpx;
}
.img{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 30rpx;
  top: 500rpx;
  opacity:0.8;
}
/* 弹窗 */
.codes {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 9999;
}

.noticecontent {
  width: 624rpx;
  height: 100%;
  background: #fff;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  overflow-y: auto;

}

