/* subPages/residentvoice/residentvoice.wxss */

page {
  background: #f5f5f5;
}

.voiceitem {
  border-top: 15rpx solid #f5f5f5;
  height: 236rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.ifont{
  width: 18rpx;
  height: 18rpx;
  margin-right: 8rpx;
  margin-top: 12rpx;
}
.voicetitle {
 
  display: flex;
  justify-content:space-between;
}
.voicetitle>text:first-child{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-weight: bold;
}
.newslist{
  display: flex;
  font-size: 32rpx;
  background:  #fff;
  padding: 30rpx 20rpx;
  margin-top:10rpx
}
.voicetitle>text:last-child{
  color:#d33333;
  font-size:28rpx ;
}
.intro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #8a8a8a;
  height: 80rpx;
}
.change {
  z-index: 999;
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  /* margin-bottom:15rpx; */
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 15rpx solid #f5f5f5;
}

.active {
  font-weight: 600;
  color: #d33333;
  position: relative;
}

.active:after {
  content: "";
  width: 60rpx;
  height: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx 0;
  background: #d33333;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translate(-50%);
}

.voicetime {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #8a8a8a;
}

.voicestatus {
  width: 144rpx;
  height: 60rpx;
  color: #fff;
  border-radius: 48rpx;
  text-align: center;
  line-height: 60rpx;
}
.color1{
  background: #d33333;

}
.color2{
  background: #ffa200;

}
.color3{
  background: #E6E6E6;

}

.addvoice {
  width: 86rpx;
  height: 86rpx;
  background: #d33333;
  border-radius: 50%;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.addvoice>text {
  font-size: 45rpx;
}
