page{
  background: #f5f5f5;
}
#Mailbox{
    width: 100%;
    min-height: 100%;
    background-color: #f5f5f5;
}

#Mailbox > .singleLine {
    width: 100%;
}

#Mailbox > .singleLine > .item {
    width: 100%;
    height: 90rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-bottom: 2rpx solid #f5f5f5;
}

#Mailbox > .singleLine > .item > .title {
  
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#Mailbox > .singleLine > .item > .title > text:first-of-type {
    color: #D33333;
}

#Mailbox > .singleLine > .item > .title > text:last-of-type {
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999;
}

#Mailbox > .singleLine > .item > input {
    flex: 1;
    text-align: right;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #48484A;
}

#Mailbox > .singleLine > .item > .icon-you {
    font-size: 48rpx;
    color: #BEBEBE;
}

#Mailbox > .singleLine > .item > picker{
    width: 500rpx;
    text-align: right;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #48484A;
}

#Mailbox > .singleLine > .item > picker .hidden {
    display: none;
}

#Mailbox > .selectTime {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    transform: translateY(100%);
    transition: all .2s linear;
    background: #fff;
    z-index: 999;
}

#Mailbox > .selectTime > view {
    width: 100%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    border-bottom:  2rpx solid #f5f5f5;
    border-top:  2rpx solid #f5f5f5;
    position: relative;
}

#Mailbox > .selectTime > view > text {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    font-size: 30rpx;
    font-weight: 400;
    background-color: #f59a23;
    width:auto;
    color: #fff;
    padding: 5rpx 30rpx;
    border-radius: 10rpx;
}

#Mailbox > .selectTime.show {
    transform: translateY(0);
}

#Mailbox > .explain {
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-left: 30rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #484848;
    margin-top: 24rpx;
}

 #Mailbox > .explain > text {
    color: #D33333;
} 

#Mailbox > textarea {
    width: 100%;
    height: 232rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #999;
    margin-bottom: 24rpx;
}

