/* subPages/serviceHall/Lead/Lead.wxss */
#Lead {
    width: 100%;
    box-sizing: border-box;
}

#Lead > .address {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    display: flex;
    align-items: center;
}

#Lead > .address > text {
    font-family: Noto Sans CJK;
    font-style: normal;
    font-weight: 600;
    font-size: 28rpx;
    line-height: 48rpx;
    color: #D33333;
    /* border-bottom: 2rpx solid #D33333; */
}
#Lead > .address > text:first-child{
  margin-right: 14rpx;
}
#Lead .address .iconfont{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  vertical-align: sub;
}