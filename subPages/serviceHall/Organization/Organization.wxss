/* subPages/serviceHall/Organization/Organization.wxss */
#Organization {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    min-height: 1200rpx;
    background-color: #f5f5f5;
    align-content: flex-start;
}

#Organization > view {
    width: 248rpx;
    height: 228rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    border-top: 2rpx solid #f5f5f5;
    background-color: #fff;
    border-right: 2rpx solid #f5f5f5;
}

#Organization > view:nth-of-type(3n){
    border-right: 0;
}

#Organization > view > image {
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 24rpx;
}

#Organization > view  > text {
    font-family: Noto Sans CJK;
    font-size: 28rpx;
    line-height: 42rpx;
    color: #48484A;
}
#OrgDetails .planting{
  width: 100%;
  height: 360rpx;
  display: flex;
  align-items: center;
}
#OrgDetails .planting image{
  width: 100%;
}