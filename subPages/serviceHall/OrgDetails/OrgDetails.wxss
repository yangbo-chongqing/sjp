/* subPages/serviceHall/OrgDetails/OrgDetails.wxss */
#OrgDetails {
    width: 100%;
    border-top: 2rpx solid #f5f5f5;
    box-sizing: border-box;
}
#OrgDetails > .title {
    box-sizing: border-box;
    font-family: Noto Sans CJK;
    font-weight: 600;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #D33333;
    width: auto;
    position: relative;
    margin-bottom: 16rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    margin-top: 30rpx;
}
#OrgDetails > .title>.iconfont{
  font-size: 32rpx;
  color: #D33333;
  margin-right: 6rpx;
}

#OrgDetails > .title > i {
    position: absolute;
    left: 2em;
    background-color: #e99999;
    bottom: 0;
    height: 4rpx;
    width: 2em;
}
#OrgDetails > .title.tel > i {
    left: 3em;
}
#OrgDetails > .info {
    box-sizing: border-box;
    padding: 0 30rpx;
}
#OrgDetails > .info ,
#OrgDetails > .info > p ,
#OrgDetails > .info > h1,
#OrgDetails > .info > h2,
#OrgDetails > .info > h3,
#OrgDetails > .info > h4,
#OrgDetails > .info > h5,
#OrgDetails > .info > h6{
    margin-bottom: 45rpx;
    font-family: Noto Sans CJK;
    font-style: normal !important;
    font-weight: normal!important;
    font-size: 28rpx!important;
    line-height: 48rpx!important;
    color: #000000!important;
}
.banner{
  width: 100%;
  height: 356rpx;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.banner image{
  width: 100%;
}
#OrgDetails .infos{
  /* width: 200rpx; */
  padding: 18rpx 0 10rpx 30rpx; 
  display: flex;
align-items: center;
justify-content: space-between;
}
/* #OrgDetails .infos text{
  width: 100%;
} */
.PersonList {
    width: 100%;
    box-sizing: border-box;
    padding: 28rpx;
}

.PersonList > .item {
    width: 100%;
    box-sizing: border-box;
    height: 184rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    padding: 32rpx 30rpx 32rpx 0;
    justify-content: space-between;
    align-items: center;
}

.PersonList > .item > view {
    width: 80%;
    height: 100%;
    display: flex;
}

.PersonList > .item > view > image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.PersonList > .item > view > view {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.PersonList > .item > view > view > .personName {
    font-family: Noto Sans CJK;
    font-style: normal;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 32rpx;
    letter-spacing: 0.00636364em;
    color: #3A3A3C;
}

.PersonList > .item > view > view > .position {
    font-family: PingFang SC;
    font-size: 28rpx;
    line-height: 28rpx;
    letter-spacing: 0.00636364em;
    color: #8E8E93;
}

/*箭头*/
.PersonList > .item > i {
    font-size: 50rpx;
    color:#999;
}

.infos > .iconfont{
    font-size: 52rpx;
    color: #d33333;
    margin-right: 30rpx;
