/* subPages/supermarket/supermarket.wxss */
page{
  background: #f5f5f5;
}
.location {
  position: fixed;
  top: 0;
  width: 100%;
  left: 0;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 96rpx;
  border-bottom: 5rpx solid #f5f5f5;
  /* padding:0 30rpx; */
  box-sizing: border-box;
}

.location>view {
  flex: 1;
  height: 100%;
}
.locationleft, .locationright {
  background: #f5f5f5;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 200rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #999;
  margin: 18rpx auto 0;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.xia {
  font-size: 18rpx;
}
.search{
  font-size:30rpx;
}
.border {
  color: #d33333;
  border: 2rpx solid #d33333;
}
.shopbox{
  margin:96rpx 0;
  /* padding:0 30rpx; */
  display: flex;
  /* justify-content: flex-start; */

  flex-wrap: wrap;

}
.shopitem{
  display: flex;
  flex-direction: column;
  /* justify-content: flex-start; */
 align-items: center;
  background: #fff;
  

  border-bottom:4rpx solid #f5f5f5;
  border-right:4rpx solid #f5f5f5;
  width:50%;
  padding:20rpx 0;
  box-sizing: border-box;
 
}
.shopitem:nth-of-type(2n){
  border-right:none;

}
.shopitem>view{
  width:100%;
  text-align: left;
  padding:0 25rpx;
  font-size:30rpx;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;

}
.shopitem>view>text{
  margin-right:10rpx;
  font-size:26rpx;
}
.shopitem>view>text:last-child{
  margin-left: 20rpx;
}
.shopitem>image{
  width:336rpx;
  height:364rpx;
}
.starcolor{
  color:#F26700;
}

.locationModel {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top: 96rpx;
  left: 0;

}

.box {
  height: 0;
  background: #f5f5f5;
  transition: all 100s linear;
}
.animate{
  height:auto;
  background: #f5f5f5;
  transition: all 100s linear;


}

.third {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  font-size: 28rpx;
  width: 100%;
  margin-top: 20rpx;
}

.itembox {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx 30rpx 0 30rpx;
}
.smallitem {
  display: inline-block;
  font-size: 24rpx;
  background: #f5f5f5;
  padding: 15rpx;
  color: #454545;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  box-sizing: border-box;
  /* line-height:30rpx; */
  border: 2rpx solid transparent;
}
.itembox .bgcolor {
  background: #fff;
  color: #454545;
}
.third>view {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 88rpx;
}
.third>view:first-child {
  background: #fff;
  color: #999;
}

.third>view:last-child {
  background: #d33333;
  color: #fff;
}
.itembox .active{
  border: 2rpx solid #d33333;
  color:#d33333;
}
.searchbox{
  padding-top:20rpx;
  background: #f5f5f5;
}
.searchitem{
  display: flex;
  align-items: center;
  width:690rpx;
  height:60rpx;
  background: #fff;
  margin:0 auto;
  border-radius: 4rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size:28rpx;
  
  
}
.searchitem>input{
  flex: 1;
}
.delete{
  font-size:32rpx;

}
.img{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 30rpx;
  top: 500rpx;
  opacity:0.8;
}
/* 弹窗 */
.codes {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 9999;
}
.filterDataView{
  height:100%
}
.noticecontent {
  width: 624rpx;
  height: 100%;
  background: #fff;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  overflow-y: auto;
}

