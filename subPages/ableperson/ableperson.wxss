/* subPages/ableperson/ableperson.wxss */
page{
background: #f5f5f5;
}
.ableperson{
border-top: 2rpx solid #f5f5f5;
}
.ableperson .ableperson-banner:last-child{
  margin-bottom: 0;
}
.ableperson-banner{
background: #fff;
margin-bottom: 20rpx;
padding: 24rpx;
}
.ableperson-img{
width: 100%;
height: 164rpx;
overflow: hidden;
display: flex;
align-items: center;
justify-content: center;
}

.ableperson-img image{
width: 100%;
}

.ableperson-text{
width: 100%;
height: 40rpx;
display: flex;
justify-content: center;
padding-top: 20rpx;
}
.ableperson-text text{
font-size: 24rpx;
color: #444;
border-right:1rpx solid #999;
line-height: 40rpx;
flex: 1;
text-align: center;

}
.ableperson-text text:last-child{
border: none;
}
.img{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 30rpx;
  top: 500rpx;
  opacity:0.8;
}
/* 弹窗 */
.codes {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 10;
}

.noticecontent {
  width: 624rpx;
  height: 100%;
  background: #fff;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  overflow-y: auto;

}

