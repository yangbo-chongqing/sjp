/* subPages/goodperson/goodperson.wxss */
.goodperson{
  border-top: 2rpx solid #f5f5f5;
}
.person-list-title{
  margin: 38rpx 0rpx 6rpx 18rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.person-list-title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 12rpx;
}
.person-list-title>picker:last-child{
  display: inline-block;
}
.person-list-title>picker:last-child,
.person-list-title .picker>text{
  font-size: 28rpx;
  color: #d33333;
  font-weight: 600;
}

.comptition-person{
  border-bottom: 2rpx solid #f5f5f5;
}
.competition-title{
  margin: 36rpx 24rpx 6rpx 18rpx;
}
.competition-title>image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 6rpx;
}
.competition-title>text:nth-child(2){
  font-size: 28rpx;
  color: #d33333;
}
.competition-title>view:last-child{
  float: right;
}
.competition-title>view:last-child>text{
  font-size: 24rpx;
  color: #dadada;
}
.comptition-person>view,
.person-right{
  display: flex;
  align-items: center;
}
.comptition-person>view>text:first-child{
  font-size: 32rpx;
  margin: 0 34rpx 0 22rpx;
  color: #D33333;
}
.person-right>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 32rpx 24rpx 32rpx 0;
}
.person-text>text{
  font-size: 32rpx;
  color: #444;
  margin-bottom: 24rpx;
}
.star{
  color: #C4C4C4;
  font-size: 24rpx;
  margin-top: 15rpx;
}

/* 模态框 */
.selectTime {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  transform: translateY(100%);
  transition: all .2s linear;
  background: #fff;
  z-index: 999;
}
.selectTime.show {
  transform: translateY(0);
}
.selectTime > view {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
  position: relative;
}
.selectTime > view > text {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  font-weight: 400;
  background-color: #f59a23;
  width: auto;
  color: #fff;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;

}
.year,
.month{
  text-align: center;
}