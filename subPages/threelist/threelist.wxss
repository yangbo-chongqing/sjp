/* subPages/threelist/threelist.wxss */

page {
  background: #f5f5f5;
}

.change {
  z-index: 999;
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  /* margin-bottom:15rpx; */
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 15rpx solid #f5f5f5;
}

.doing {
  font-size: 28rpx;
  color: #454545;
}                                                                                                                                                                                                                                                                                                                                            

.active {
  font-weight: 600;
  color: #d33333;
  position: relative;
}

.active:after {
  content: "";
  width: 60rpx;
  height: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx 0;
  background: #d33333;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translate(-50%);
}

.listall {
  margin-top: 102rpx;
  background: #fff;
  /* padding:0 0 0 30rpx; */
}

.resourceitem {
  border-bottom: 2rpx solid #f5f5f5;
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.itemtitle {
  font-size: 28rpx;
  color: #444;
  padding-top: 10rpx;
}
.imgbox {
  display: flex;
  justify-content: flex-start;
  margin: 20rpx 0;
}

.imgbox>image {
  width: 220rpx;
  height: 160rpx;
  display: block;
}

.imgbox>image:nth-of-type(2) {
  margin: 0 30rpx;
}

.itembot {
  display: flex;
  justify-content: space-between;
  align-items:flex-end
}

.titlefont{
  color: #d33333;
  font-size: 30rpx;

}


.itembot>text:last-child {
  color: #999;
}

