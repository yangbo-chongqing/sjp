/* subPages/threelist/threelist.wxss */

page {
  background: #f5f5f5;
}

.change {
  z-index: 999;
  display: flex;
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  /* margin-bottom:15rpx; */
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 15rpx solid #f5f5f5;
}

.doing {
  font-size: 28rpx;
  color: #454545;
}                                                                                                                                                                                                                                                                                                                                            

.active {
  font-weight: 600;
  color: #d33333;
  position: relative;
}

.active:after {
  content: "";
  width: 60rpx;
  height: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx 0;
  background: #d33333;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translate(-50%);
}

.listall {
  margin-top: 102rpx;
  background: #fff;
  /* padding:0 0 0 30rpx; */
}

.resourceitem {
  border-bottom: 2rpx solid #f5f5f5;
  padding: 30rpx 30rpx 30rpx 30rpx;
}

.itemtitle {
  font-size: 28rpx;
  color: #444;
}

.imgbox {
  display: flex;
  justify-content: flex-start;
  margin: 20rpx 0;
}

.imgbox>image {
  width: 220rpx;
  height: 160rpx;
  display: block;
}

.imgbox>image:nth-of-type(2) {
  margin: 0 30rpx;
}

.itembot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.itembot>text {
  font-size: 28rpx;
}

.itembot>text:first-child {
  color: #d33333;
}

.itembot>text:last-child {
  color: #999;
}

/* 需求提交 */

/* subPages/addneed/addneed.wxss */

form {
  background: transparent;
}

.needone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 30rpx;
  height: 90rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.line {
  width: 100%;
  /* background: #fff; */
  border-top: 2rpx solid #f5f5f5;
}

.needone {
  background: #fff;
}

.needone>view:first-child>text:first-child {
  color: #d33333;
}

.needone>view:first-child>text:last-child {
  color: #999;
}

.needone>input {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
}

.needone>picker {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #48484a;
}

.nothing {
  color: #999;
}

.textinfo {
  position: relative;
  padding: 0 30rpx;
}

.textinfo:after {
  content: '';
  width: 100%;
  height: 10rpx;
  background: #f5f5f5;
  position: absolute;
  top: 0;
  left: 0;
}

.texttitle {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}

.texttitle>text:first-child {
  color: #d33333;
}

.textcontent {
  width: 95%;
  height: 200rpx;
  margin: 0 auto;
  /* border:1px solid #f5f5f5; */
  font-size: 28rpx;
  /* padding:20rpx; */
  box-sizing: border-box;
}

.subbtn {
  /* background: transparent; */
  width: 516rpx;
  height: 88rpx;
  background: #d33333;
  border-radius: 0;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: normal;
  padding: 0;
  position: absolute;
  top: 800rpx;
  left: 50%;
  transform: translate(-50%);
}

/* 项目清单 */

.projectlist {
  display: flex;
  height: 350rpx;
  justify-content: flex-start;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom:12rpx solid #f5f5f5;
  position: relative;
}
.projectlist:last-child{
  border-bottom:none;

}
.status{
  width:88rpx;
  height:88rpx;
  border-radius: 50%;
  display: block;
  position: absolute;
  bottom:40rpx;
  right:30rpx;
}
.propic {
  font-size: 28rpx;
  text-align: center;
  height: 180rpx;
  margin-right: 20rpx;
}

.propic>image {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  border-radius: 50%;
  margin-bottom:20rpx;
}

.prointro {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 240rpx;
}

.prointro>view:first-child {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.introbot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.introbot>view>text{
  color:#d33333;
}
.introbot>view:last-child{
  color:#999;
}

.propic>text{
  text-align: left;
  width: 168rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.introbot>view:first-child{
  margin-left: 46rpx;
}
