/* subPages/psychological/psychological.wxss */
.psychological{
  border-top: 2rpx solid #f5f5f5;
}
.psy-nav{
  display: flex;
  align-items: center;
}
.nav-title{
  width: 50%;
  position: relative;
  text-align: center;
  padding: 22rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #454545;
}
.nav-title view{
  width: 60rpx;
  height: 8rpx;
  background: #D33333;
  border-radius: 8rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 8rpx;
  margin: auto;
  display: none;
}
.actve text{
  color: #D33333; 
}
.nav-title.actve view{
  display: block;
}

/* 心理活动风采 */
.clear{
  clear: both;
}
.politics-top{
  background: #fff;
}
.politics-top>.title{
  border-bottom: 2rpx solid #f5f5f5;
  padding: 22rpx 0 24rpx 24rpx;
}
.politics-top>.title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  vertical-align: sub;
}
.politics-top>.title>text{
  color: #D33333;
  font-weight: bold;
  font-size: 28rpx;
}
.politics-middle{
  margin-bottom: 14rpx;
}
.politics-middle>.title,
.politics-bottom>.title{
  border: none;
}
.middle-text>view{
  padding: 0rpx 30rpx 32rpx 30rpx;
}
.hui>view{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 24rpx;
}
.hui>view:first-child{
  color: #8a8a8a;
  line-height: 38rpx;
}
.hui>view:nth-child(2){
  width: 546rpx;
}

.politics-bottom>.title{
  border: none;
}
.middle-text>view{
  padding: 0rpx 30rpx 32rpx 30rpx;
}
.hui>view{
  font-size: 28rpx;
  color: #8a8a8a;
}

.bottom-list>view{
  padding: 0rpx 30rpx 40rpx 30rpx;
}
.list-main{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-main>image{
  width: 220rpx;
  height: 172rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
}
.list-text{
  width: 446rpx;
  display: flex;
  font-size: 16rpx;
  flex-direction: column;
  justify-content: flex-start;
}
.list-text>text:first-child{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 96rpx;
}
.list-text>view:nth-child(2){
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
}
.list-text>text:last-child{
  color: #8a8a8a;
  font-size: 24rpx;
  margin-top: 35rpx;
}
.addneed {
  bottom: 300rpx;
}
.addneed>text:first-child{
  font-size: 40rpx;
  margin-top: 15rpx;
}
.btnfixed {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 4px rgba(211, 51, 51, 0.56);
  display: flex;
  align-items: center;
  font-size: 16rpx;
  flex-direction: column;
  justify-content: flex-start;
  color: #d33333;
}

/* 心理服务师 */
.demeanor-list{
  padding: 32rpx 32rpx 40rpx 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.demeanor-list>image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 4rpx;
  margin-right: 22rpx;
}
.demeanor-list-left{
  width: 446rpx;
}
.demeanor-name{
  font-size: 32rpx;
  color: #444;
  margin-bottom: 24rpx;
}
.demeanor-name>view{
  float: right;
}
.demeanor-name .iconfont{
  color: #dadada;
}
.demeanor-list-left>view:nth-child(2){
  font-size: 24rpx;
  color: #8a8a8a;
  margin-bottom: 20rpx;
}
.demeanor-list-left>view:last-child{
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.demeanor-time{
  color: #8a8a8a;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.demeanor-time view{
  float: right;
  font-size: 24rpx;
}
.demeanor-time>view>text{
  color: #d33333;
}
.lines{
  height: 16rpx;
  width: 100%;
  background: #f5f5f5;
}
.points{
  display: flex;
  align-items: center;
}

.points > image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

.points > text {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #D33333;
}