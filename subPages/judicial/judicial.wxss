/* subPages/judicial/judicial.wxss */
page{
  background-color: #f5f5f5;
}
.bg{
  height: 300rpx;
  width: 100%;
}
.bg>image{
  height: 100%;
  width: 100%;
}
#judicial .swiper-item>image{
  width: 100%;
}
.judicial-nav{
  display: flex;
  align-items: center;
  background-color: #fff;
}
.judicial-nav>view{
  width: 240rpx;
  text-align: center;
  padding: 32rpx 0 40rpx 0;
}
.judicial-nav image{
  width: 88rpx;
  height: 88rpx;
  /* border-radius: 50%; */
}
.judicial-nav .nav-text>text{
  display: block;
}
.judicial-nav .nav-text>text:first-child{
  font-size: 28rpx;
  margin: 10rpx 0;
  color: #454545;
}
.judicial-nav .nav-text>text:last-child{
  font-size: 20rpx;
  color: #8a8a8a;
}