/* subPages/emotiondetails/emotiondetails.wxss */
page{
  background: #f5f5f5;
}
.details{
  border-top: 1px solid #f5f5f5;
  margin-bottom: 14rpx;
}
.details-top{
  padding: 16rpx 30rpx 20rpx 30rpx;
  background: #fff;
}
.details-top .details-title{
  font-family: PingFang SC;
  font-size: 48rpx;
  color: #000;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.details-user{
  margin-top: 32rpx;
}
.details-user image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  vertical-align: sub;
}
.details-user .details-user-name{
  display: inline-block;
  margin-left: 24rpx;
}
.details-user-name>view:first-child{
  font-size: 28rpx;
  color: #000;
  margin-bottom: 16rpx;
}
.details-user-name .details-user-time{
  font-size: 20rpx;
  color: #999;
}
.details-user>view:first-child,
.details-user>view:last-child{
  display: inline-block;
}
.details-user>view:last-child{
  float: right;
  color: #999;
  font-size: 20rpx;
}
.details-user>view:last-child>text{
  color: #d33333;
}
.line{
  width: 85%;
  height: 1px;
  margin: auto;
  background: #f5f5f5;
  padding: 0 28rpx;
}
.details-main{
  /* margin-top: 22rpx; */
  background: #fff;
}
.details-main>view{
  padding: 0 30rpx 32rpx 50rpx;
}
.list-browse{
  text-align: center;
}
.list-browse>view{
  display: inline-block;
}
.list-browse>view>text{
  margin-right: 16rpx;
  color: #999;
}
/* .list-browse>view:first-child>text:first-child{
  color: #d33333;
} */

/* 全部评论 */
.shareMain {
  width: 100%;
  margin: 30px 0;
}
 
.shareMain .mainList {
  overflow: hidden;
  margin: 0 auto;
  text-align: center;
}
 
.shareMain .title {
  margin: 0 auto;
  text-align: center;
  font-size: 13px;
  margin-top: -13px;
}

.commentss{
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.commentss > .inner{
  background-color: #f3f3f3;
  width: 85%;
  height: 50rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
}
.commentss > .commit{
  color: #3686FB;
}
.showCommentss{
  background-color: #fff;
  width: 100%;
  min-height: 750rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: 100rpx;
}
.showCommentss > .commentsTitle{
  background-image: url('http://www.mlxc365.com/images/zhongyixiang/suibiandayige.png');
  background-repeat: no-repeat;
  background-size: 35rpx;
  padding-left: 60rpx;
  background-position-y: 6rpx;
  font-size: 28rpx;
  color: #259B24;
}
.showCommentss > .itemBox{
  width: 100%;
  margin-top: 45rpx;
  margin-left: 20rpx;
}
.showCommentss > .itemBox > .item{
  display: flex;
  align-items: center;
}
.showCommentss > .itemBox > .item > image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.showCommentss > .itemBox > .item > .userBox {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.showCommentss > .itemBox > .item > .userBox > text:last-child{
  font-size: 24rpx;
  color: #ccc;
}
.showCommentss > .itemBox > .textArea{
  font-size: 28rpx;
  color: #999;
  width: 80%;
  margin: 20rpx 0  40rpx 120rpx;
}
.competition-title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.competition-title>text:nth-child(2){
  font-size: 28rpx;
  color: #d33333;
  font-weight: 600;
}