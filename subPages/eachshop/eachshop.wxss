.evaluate{
  line-height: 88rpx;

}
.evaluate>text{
  margin-right:10rpx;

}
.goodscount{
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
  font-size: 28rpx;
  line-height: 88rpx;
}
.goodscount>view:first-child{
  flex: 1;
}
.goodsnum{
  margin: 0 20rpx;
  font-size:32rpx;
  width:88rpx;
  height:60rpx;
  margin-top:14rpx;
  background: #f5f5f5;
  line-height: 60rpx;
  text-align: center;
}
.calculation{
  display: flex;
}
.add,.minus{
height:100%;
width:88rpx;
display: block;
text-align: center;
line-height: 88rpx;
}
