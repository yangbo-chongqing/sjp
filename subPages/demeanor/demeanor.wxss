/* subPages/demeanor/demeanor.wxss */
.demeanor{
  border-top: 1px solid #f5f5f5;
}
.demeanor-list{
  margin: 32rpx 32rpx 40rpx 32rpx;
  display: flex;
  align-items: center;
}
.demeanor-list>image{
  width: 293rpx;
  height: 220rpx;
  border-radius: 4rpx;
  margin-right: 22rpx;
}
.demeanor-list-left{
  width: 446rpx;
}
.demeanor-name{
  font-size: 36rpx;
  color: #444;
  margin-bottom: 24rpx;
  /* display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; */

}
.demeanor-name>text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;

}
.demeanor-name>view{
  float: right;
}
.demeanor-name .iconfont{
  color: #dadada;
}
.demeanor-list-left>view:nth-child(2){
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 100rpx;
}
.demeanor-time{
  color: #8a8a8a;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.demeanor-time view{
  float: right;
  font-size: 24rpx;
}
.demeanor-time>view>text{
  color: #d33333;
}
.lines{
  height: 16rpx;
  width: 100%;
  background: #f5f5f5;
}