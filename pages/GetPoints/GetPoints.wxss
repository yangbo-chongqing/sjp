/* pages/integral/integral.wxss */
.line{
  width:100%;
  height:24rpx;
  background: #f5f5f5;
}

.itemTitle{
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 0 0 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
}


.itemTitle > image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 25rpx;
}
.itemTitle>text{
    font-size:32rpx;
    flex: 1;

}
.itemTitle>view{
  font-size:28rpx;
  color:#cdcdcd;
  display: flex;
  align-items: center;
}
.itemTitle>view>text{
  margin: 0 30rpx 0 20rpx;
  font-size:40rpx;

}