/* pages/login/login.wxss */

.topbox {
  width: 100%;
  height: 440rpx;
  /* background: url("http://119.3.196.255:8094/file/icon//Group 183.png") no-repeat; */
  background-size: 100%;
  position: relative;
}

.imgbox {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
  background: #fff;
  /* box-shadow: 0px 8rpx 8rpx rgba(215, 63, 63, 0.25); */
  border-radius: 10rpx;
}

.imgbox>image {
  width: 100%;
  height: 100%;
  display: block;
}

.logintitle {
  /* text-align: center; */
  padding: 50rpx 0;
}

.logintitle>text:first-child {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.logintitle>text:last-child {
  font-size: 24rpx;
}

.all {
  width: 516rpx;
  margin: 0 auto;
}

.formitem {
  border: 2rpx solid #d33333;
  height: 88rpx;
  position: relative;
  margin-bottom: 70rpx;
}

.bot {
  margin-bottom: 40rpx;
}

.formitem>text {
  position: absolute;
  top: -22rpx;
  left: 15rpx;
  background: #fff;
  display: block;
  font-size: 28rpx;
  padding: 0 10rpx;
  text-align: center;
}

.formitem > input {
  height: 100%;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.fontcolor {
  font-size: 24rpx;
  color: #454545;
  margin-bottom: 100rpx;
}

.form {
  height: 88rpx;
  background: #d33333;
  color: #fff;
  font-size: 32rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;

}

.member {
  margin-bottom: 80rpx;
  font-size: 28rpx;
  color: #bfbfbf;
  display: flex;
  align-items: center;
}

.circle {
  color: #d33333;
  margin-right: 10rpx;
}

.bottombtn {
  position: fixed;
  bottom: 50rpx;
  left: 50%;
  transform: translate(-50%);
  display: flex;
}

.bottombtn view {
  font-size: 24rpx;
  color: #bfbfbf;
}

.centerline {
  width: 2rpx;
  height: 32rpx;
  background: #bfbfbf;
  margin: 0 20rpx;
}

button:not([size='mini']) {
  width: 100%;
}

button {
  font-size: 32rpx;
  padding: 0;
}
