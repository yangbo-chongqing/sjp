/* pages/ableCheck/details/details.wxss */
.topall {
  position: relative;
  height: 100%;
}

.all {
  background: #fff;
  /* border-top: 4rpx solid #f5f5f5; */
  padding: 0 30rpx;
  padding-bottom: 66rpx;
}

.all>view {
  padding: 32rpx 0;
}

.tit {
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: 550;
  font-size: 16px;
  color: #444444;
}

.intro {
  /* border-top: 3rpx solid #f5f5f5; */
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: normal;
  font-size: 16px;
  color: #444444;
}

.picfont {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picfont image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.picfont>view:first-child {
  display: flex;
  align-items: center;
}

.picfont>view:first-child>view:last-child {
  color: #444444;
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: 550;
  font-size: 14px;
  padding-left: 28rpx;
}

.picfont>view:last-child {
  margin-top: 10rpx;
  border: 1px solid #BFBFBF;
  color: #D33333
}

.smallfont {
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: normal;
  margin-top: -60rpx;
}

.smallfont>text:first-child {
  font-size: 12px;
  color: #BFBFBF;
}

.smallfont>text:last-child {
  color: #78AFEC;
  font-size: 14px;
  padding-left: 24rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  text-align: center;
  align-items: center;
  height: 96rpx;
}

.bottom>view {
  height: 100%;
  line-height: 96rpx;
}

.down {
  width: 100%;
  background: #E6E6E6;
  color: #8A8A8A;
}
.pass{
  width: 100%;
  background: #D33333;
  color: #fff;
}

.btnok{
  color: #D33333;
  font-size: 14px;
  text-align: center;
  line-height: 60rpx;
  width: 150rpx;
  height: 60rpx;
  border: 1px solid #BFBFBF;
  border-radius: 2px;
}