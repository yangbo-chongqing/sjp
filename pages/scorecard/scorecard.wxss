/* pages/scorecard/scorecard.wxss */
.headall {
  position: relative;
}

.headpic {
  width: 100%;
  height: 350rpx;
}

.onScore {
  position: absolute;
  left: 35%;
  top: 120rpx;
  text-align: center;
  color: #fff;
  width: 210rpx;

}

.onScore>text {
  font-size: 36px;
  width: 100%;
  text-align: center;
}

.onScore>view {
  font-size: 12px;
  margin-top: 20rpx;
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: normal;
}

.headall>view:nth-last-child(1) {
  position: absolute;
  top: 280rpx;
  left: 100rpx;
  color: #FFFFFF;
  font-size: 16px;
}

.righttext {
  margin-left: 270rpx;
}
.head{
  display: flex;
  justify-content: space-between;
}
.Oactive {
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-bottom: 2px solid #fff;
}
.iconf{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  color: #fff;
}
.headfont {
  position: absolute;
  top: 30rpx;
  left: 20rpx;
  color: #fff;
  font-size: 14px;
  display: flex;
}
.headfont>view {
  padding: 0 10rpx;
}
.headfont>view>view {
  padding: 0 10rpx;
}

.line {
  width: 50%;
  margin: 0 auto;
  height: 5rpx;
  background: #fff;
}

.iconfont {
  width: 18px;
  height: 18px;
  line-height: 80rpx;
}
.iconpic{
  width: 40rpx;
  height: 40rpx;
  margin-right: 32rpx;
}
.centertop {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.centertop>view:first-child>text {
  color: #bababa;
  margin-left: 20rpx;
  line-height: 80rpx;
  font-size: 14px;
}

.centertop>view>.selectfont {
  font-size: 16px !important;
  color: #FF3F3F !important;
}

.centertop>view:last-child {
  line-height: 80rpx;
  font-size: 14px;
  color: #BFBFBF;
}

.foot {
  width: 100%;
  height: 140rpx;
}

.footall {
  padding: 20rpx;
  border-top: 1px solid #eaeaea;
}

.footall>view {
  display: flex;
  justify-content: space-between;
}

.foottop>text:first-child {
  color: #444444;
  font-family: Source Han Sans CN;
  font-style: normal;
  font-weight: 500;
  font-size: 16px;
  font-style: normal;
}

.foottop>text:last-child {
  color: #D33333;
  font-size: 14px;
  font-weight: normal;
}

.footft>text:first-child {
  color: #BFBFBF;
  font-size: 12px;
  margin-top: 14rpx;
  font-style: normal;
}

.footft>text:last-child {
  color: #BFBFBF;
  font-size: 14px;
  font-weight: bold;
  margin-top: 10rpx;

}
/* 弹窗 */
.codes{
  width:100%;
  height:100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top:0;
  left:0;
}
.noticecontent{
  width:624rpx;
  height:628rpx;
  background: #fff;
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  border-radius: 28rpx;
  box-sizing: border-box;
  padding:40rpx 30rpx;
}
.noticecontent>view:nth-of-type(2n+1){
  font-size:32rpx;
  color:#d33333;
  margin-bottom:30rpx;
}
.noticecontent>view:nth-of-type(2n){
  font-size:28rpx;
  color:#000;
  line-height: 48rpx;
  margin-bottom:30rpx;

}
.comfirebtn{
  width:200rpx;
  height:80rpx;
  color:#fff!important;
  line-height:80rpx;
  text-align: center;
  font-size:32rpx;
  background: #d33333;
  border-radius: 96rpx;
  /* margin: 0 auto; */
  position: absolute;
  bottom:40rpx;
  left:50%;
  transform: translate(-50%);

}
.headinc{
  position: absolute;
  left: 42%;
  top: 240rpx;
  color: #fff;
  font-size: 12px;
}
.greenfont{
  color: #24D9E3!important;
}