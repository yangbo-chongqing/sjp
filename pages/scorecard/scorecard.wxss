  position: fixed;
  top: 0;
  left: 0;
}

.noticecontent {
  width: 624rpx;
  height: 100%;
  background: #fff;
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

