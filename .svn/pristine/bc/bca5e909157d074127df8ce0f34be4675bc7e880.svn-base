/* subPages/logdetails/logdetails.wxss */
.log-details{
  border-top: 1px solid #f5f5f5;
}
.log-details>view:first-child{
  border-bottom: 2rpx solid #f5f5f5;
}
.log-details-title{
  font-size: 36rpx;
  color: #000;
  font-weight: 600;
  margin: 16rpx 30rpx 42rpx 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.log-details-msg{
  padding: 0 30rpx 51rpx 30rpx;
}
.log-details-msg .place>view{
  display: inline-block;
}
.log-details-msg .place>view:last-child{
  float: right;
}
.log-details-msg>view:not(:last-child){
  margin-bottom: 32rpx;
}
.log-details-msg text{
  font-size: 28rpx;
  color: #8a8a8a;
}
.place>view:last-child{
  font-size: 24rpx;
  color: #d33333;
  border: 2rpx solid #d33333;
  padding: 6rpx 20rpx;
}
.personnel>text:last-child{
  color: #d33333;
}
.content{
  padding: 30rpx;
  font-size: 32rpx;
  color: #444;
  text-indent: 2em;
  /* margin-top: 35rpx; */
}