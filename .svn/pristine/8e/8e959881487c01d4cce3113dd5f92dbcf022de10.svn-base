/* components/serviceHall/News/News.wxss */
@import "../../../assets/css/iconfont.wxss";
.serviceHallNews {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx 30rpx;
}
.serviceHallNews > .introduction{
    width: 100%;
    height: 90rpx;
    border-bottom: 2rpx solid #f5f5f5;
    box-sizing: border-box;
    /* padding-left: 50rpx; */
    display: flex;
    align-items: center;
    text-align: center;
    color: #D33333;
    font-family: PingFang SC;
    font-style: normal;
    font-weight: bold;
    font-size: 28rpx;
    line-height: 28rpx;
}

.serviceHallNews > .introduction > .square {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}

.serviceHallNews > .introduction > .square1 {
    width: 32rpx;
    height: 32rpx;
    display: block;
    background: rgba(255, 59, 48, 0.2);
    transform: rotate(64.81deg);
    position: absolute;
    left: 30rpx;
}
.serviceHallNews > .info{
  padding: 20rpx 0;
}
.serviceHallNews > .info p{
    font-family: PingFang SC!important;
    font-style: normal!important;
    font-weight: bold !important;
    font-size: 28rpx!important;
    line-height: 42rpx!important;
    color: #000000!important;
}

.serviceHallNews > .info image ,
.serviceHallNews > .info img {
    max-width: 100% !important;
}