/* subPages/voluntary/voluntary.wxss */
page{
  background-color: #f5f5f5;
}
.psy-nav{
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-bottom: 18rpx;
}
.nav-title{
  width: 50%;
  position: relative;
  text-align: center;
  padding: 22rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #454545;
}
.nav-title view{
  width: 60rpx;
  height: 8rpx;
  background: #D33333;
  border-radius: 8rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 8rpx;
  margin: auto;
  display: none;
}
.actve text{
  color: #D33333; 
}
.nav-title.actve view{
  display: block;
}

/* 社区调解 */
.voluntary-list{
  background-color: #fff;
}
.voluntary-title{
  border-bottom: 2rpx solid #f5f5f5;
  padding: 22rpx 0 24rpx 24rpx;
}
.voluntary-title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  vertical-align: sub;
}
.voluntary-title>text{
  color: #D33333;
  font-weight: bold;
  font-size: 28rpx;
}
.voluntary-main image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}
.voluntary-main>view{
  display: flex;
  align-content: center;
  padding: 32rpx 0 32rpx 28rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.voluntary-text>text{
  display: block;
}
.voluntary-text>text:first-child{
  font-size: 32rpx;
  color: #444;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.voluntary-text>text:last-child{
  font-size: 28rpx;
  color: #8a8a8a;
}

/* 发布调解 */
.needone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 30rpx 0 0;
  height: 90rpx;
  font-size: 28rpx;
  margin-left: calc(30/10.8*1vh);
  border-bottom:2rpx solid #f5f5f5
}

.line {
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
}

.needone>view:first-child>text:first-child {
  color: #d33333;
}

.needone>view:first-child>text:last-child {
  color: #999;
}

.needone>input {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
}
.needone>picker {
  flex: 1;
  display: block;
  text-align: right;
  margin-right: 20rpx;
  font-size: 28rpx;
  color:#48484A;

}
.nothing{
  color:#999;
}
.textinfo{
  border-top:20rpx solid #f5f5f5;
  border-bottom:20rpx solid #f5f5f5;

  padding:0 30rpx 30rpx;
}
.texttitle{
  padding:20rpx 0;
  font-size: 28rpx;
  color:#999;
}
.texttitle>text:first-child{
  color:#d33333;
}
.textcontent{
  width:95%;
  height:200rpx;
  margin: 0 auto;
  font-size: 28rpx;
  box-sizing: border-box;
}
.top0{
  border-top:0;
}
.imgall{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.imgall>.imgone{
  width:200rpx;
  height:150rpx;
   display: flex;
   justify-content: flex-start;
   box-sizing: border-box;
   margin-right:30rpx;
}
.imgall>view>image{
  display: block;
  width:100%;
  height:100%;
}
.imgall>.imgone:last-child{
  margin-right:0;

}
.add{
  width:200rpx;
  height:150rpx;
  border: 1px dotted #666;
  color:#666;
  font-size:80rpx;
  text-align: center;
  line-height: 150rpx;
}
.add>view{
  font-size:40rpx;
}

.imgone{
  position: relative;
}
.del{
  position: absolute;
  top:-15rpx;
  right:-15rpx;
  font-size:30rpx;
}
.subbtn{
  width:516rpx;
  height:88rpx;
  background: #d33333;
  border-radius:0;
  line-height: 88rpx;
  text-align: center;
  font-size:32rpx;
  color:#fff;
  font-weight: normal;
  padding: 0;
  margin:40rpx auto 0;
}
.picker{
  color: #999;
}

/* 调解案例展示 */
.voluntary-main3{
  background-color: #fff;
}
.bottom-list>view{
  padding: 40rpx 30rpx 30rpx 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}
.list-main{
  display: flex;
  align-items: center;
}
.list-main>image{
  width: 220rpx;
  height: 172rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
}
.list-text{
  width: 446rpx;
}
.list-text>text:first-child{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.list-text>view:nth-child(2){
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
  color: #8a8a8a;
  height: 110rpx;
}