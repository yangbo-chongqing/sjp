 /* 拒绝弹框 */
 .lookcode {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.15);
  position: fixed;
  top: 0;
  left: 0;
}

.lookcontent {
  position: absolute;
  width: 90%;
  height: 60%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: linear-gradient(0deg, #fff, #fff), #c4c4c4;
  border-radius: 28rpx;
  box-sizing: border-box;
  padding: 50rpx 0 0 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.lookcontent>.btn{
  width: 100%;
  border-top: 2rpx solid #cdcdcd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* .lookcontent>.btn>view:first-child{
  margin-right: 100rpx;
} */

.looktitle {
  font-size: 32rpx;
  color: #454545;
}

.looknum {
  width: 420rpx;
  height: 156rpx;
  background: rgba(255, 59, 48, 0.04);
  line-height: 156rpx;
  color: #d33333;
  font-weight: bold;
  font-size: 40rpx;
  text-align: center;
  letter-spacing: 20rpx;
}

.lookcomfire {
  width: 50%;
  height: 90rpx;
  margin: 0 auto;
  color: #d33333;
  line-height: 90rpx;
  text-align: center;
  border-right: 2rpx solid #cdcdcd;
}