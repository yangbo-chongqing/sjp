/* subPages/emotion/emotion.wxss */
page{
  background: #f5f5f5;
}
/* banner头部 */
.gridservice{
  border-top: 1px solid #f5f5f5;
}
.gridservice>view:first-child{
  background: #fff;
  margin-bottom: 24rpx;
}
.emotion{
  background: #fff;
  border-top: 2rpx solid transparent;
}
.grid-banner:not(:last-child){
  border-right: 1px solid #f5f5f5;
}
.gridservice>view:first-child,
.grid-banner{
  display: flex;
  justify-content: center;
  align-items: center;
}
.grid-banner{
  width: 248rpx;
  height: 212rpx;
}
.grid-banner image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 5px;
}
.grid-banner .banner{
  text-align: center;
}
.banner text{
  font-size: 28rpx;
  color: #444;
}
.lines{
  height: 16rpx;
  width: 100%;
  background: #f5f5f5; 
}

/* 列表 */
.competition-title{
  margin: 36rpx 24rpx 0rpx 26rpx;
}
.competition-title>image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 6rpx;
}
.competition-title>text:nth-child(2){
  font-size: 28rpx;
  color: #d33333;
  font-weight: 600;
}
.list-main{
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 40rpx;
  padding-top: 32rpx;
}
.list-main-title{
  font-size: 36rpx;
  color: #444;
  margin-left: 30rpx;
  margin-bottom: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list-main>view:last-child{
  margin: 0 30rpx 0rpx 30rpx;
}
.list-main>view:last-child text{
  color: #8a8a8a;
  font-size: 24rpx;
}
.list-main>view:last-child image{
  width: 42rpx;
  height: 42rpx;
  margin-right: 16px;
}
.list-time,
.list-per{
  margin-right: 60rpx;
}
.list-browse{
  float: right;
}
.list-browse>view{
  display: inline-block;
}
.list-browse>view>text{
  margin-right: 16rpx;
}
.red{
  color: #d33333 !important;
}