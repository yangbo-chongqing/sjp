<!--pages/updatepwd/updatepwd.wxml-->
<top_nav mytop="{{mytop}}"></top_nav>
<view class="topbox">


  <image src="http://119.3.196.255:8094/file/icon/logosj.png" role="img"></image>
</view>

<form bindsubmit="formSubmit">
  <view class="all">
    <view class="logintitle">
      <text>输入新密码</text>
      <text>欢迎使用石井坡E党建</text>
    </view>
    <view class="formcontent">

      <!-- <view class="formitem">
        <text wx:if="{{one == 1}}">号码</text>
        <input type="text" bindfocus="change" bindblur="inChange" name=""
        data-show="1" placeholder="手机号" />
      </view> -->
      <view class="formitem bot">
        <text  wx:if="{{two == 1}}">输入原密码</text>
        <input type="password" bindfocus="change" bindblur="inChange" name="password" maxlength="30 "
        data-show="2"  placeholder="输入原密码" />
      </view>
      <view class="formitem bot">
        <text  wx:if="{{three == 1}}">确认新密码</text>
        <input type="password" bindfocus="change" bindblur="inChange" name="newpassword" maxlength="30"
        data-show="3"  placeholder="确认新密码" />
