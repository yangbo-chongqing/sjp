/* subPages/moreVolunteerActivity/moreVolunteerActivity.wxss */
.change{
  display: flex;
  height:88rpx;
  align-items: center;
  justify-content: space-around;
  border-bottom:15px solid #f5f5f5;
  
}
.doing{
 font-size: 28rpx;
 color:#454545;
  
}
.active{
  font-weight: 600;
  color:#D33333;
  position: relative;
}
.active:after{
  content:"";
  width:60rpx;
  height:8rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx 0;
  background:#D33333; 
  position: absolute;
  bottom:-20rpx;
  left:50%;
  transform: translate(-50%);
}
.studyItem {
  /* margin-left: calc(100%/30); */
  padding: 30rpx;
  border-bottom: 8rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
}

.studyItem>image {
  width: 220rpx;
  height: 160rpx;
  display: block;
  margin-right: 20rpx;
}

.studyright {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 450rpx;
}

.studytitle {
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.studycontent {
  flex: 1;
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 40rpx;
}
.color{
  color:#D33333;
}
.studytime {
  display: flex;
  justify-content: space-between;
  color: #8a8a8a;
  font-size: 24rpx;
}