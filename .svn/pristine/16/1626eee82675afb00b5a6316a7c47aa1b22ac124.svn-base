/* subPages/moreVolunteerActivity/volunteerdetail/volunteerdetail.wxss */
.activityTitle{
  border-top:2rpx solid #f5f5f5;
  font-size:48rpx;
  color:#000;
  font-weight: 550;
  line-height:60rpx;
  padding:0 30rpx;
  font-weight: bold;

  /* display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden; */
}
.activitTop{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 30rpx;
  margin:20rpx 0 30rpx 0;

}
.activitTop>image{
  width:88rpx;
  height:88rpx;
  border-radius: 50%;
  display: block;
  margin-right: 20rpx;
}
.createInfo{
  flex: 1;
  display: flex;
  flex-direction:column;
  justify-content: space-between; 
}
.createName{
  font-size:28rpx;
  color:#000;
}
.createTime{
  font-size:24rpx;
color:#999;
}
.joinNum{
  font-size:24rpx;
}
.joinNum>text{
  /* color:#D33333; */
  color: #999;
}
.itemList{
 
 position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding:0 30rpx 40rpx 30rpx;
  position: relative;
  border-bottom: 2rpx solid #f5f5f5;
 

}
.listOne{
  font-size:28rpx;
  color:#999;
  line-height:200%;
}
.listOne>text:last-child{
  color:#000;
}
.listOne>.redfont{
  color:#D33333!important;
}
.joinbtn{
  position: absolute;
  bottom:40rpx;
  right:30rpx;
  width:180rpx;
  height:72rpx;
  background: #D33333;
  border-radius: 36rpx;
  font-size:28rpx;
  color:#fff;
  text-align: center;
  line-height: 72rpx;
}
.activityContent{
  padding:30rpx;
  /* text-indent: 2em; */
}
.sign{
  width:180rpx;
  height:72rpx;
  background: #D33333;
  border-radius: 36rpx;
  font-size:28rpx;
  color:#fff;
  text-align: center;
  line-height: 72rpx;
}
.color3{
  background: #D33333;
  width: 180rpx;
  height: 72rpx;
  border-radius: 42rpx; 
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 72rpx;
  text-align: center;
  position: absolute;
  right: 30rpx; 
  bottom: 42rpx;
}
.hide{
  display: none;
}



