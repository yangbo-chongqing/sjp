/* subPages/gridlog/gridlog.wxss */
.grid-log{
  border-top: 1px solid #f5f5f5;
  position: relative;
}
.log-list{
  padding: 32rpx 32rpx 40rpx 30rpx;
  display: flex;
  align-items: center;
}
.log-list:not(:last-child){
  border-bottom: 1px solid #f5f5f5;
}
.log-list>image{
  width: 220rpx;
  height: 160rpx;
  border-radius: 4rpx;
  margin-right: 22rpx;
}
.log-list-right>text,
.log-list-right>view{
  font-size: 32rpx;
  color: #444;
}
.log-list-right view:first-child{
  width: 446rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.log-list-right view:nth-child(2){
  color: #f26700;
  font-size: 24rpx;
}
.log-list-right text:last-child{
  font-size: 20rpx;
  color: #8a8a8a;
  display: block;
  margin-top: 35rpx;
}
.log-add>.iconfont{
  position: absolute;
  font-size: 86rpx;
  right: 32rpx;
  top: 900rpx;
  color: #D33333;
}