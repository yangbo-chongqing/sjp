/* components/dialog/dialog.wxss */
.handwrite{
    width:100%;
    height:100%;
    position: fixed;
    left: 0;
    top:0;
    background:rgba(0, 0, 0, 0.15);
  }
  .handcontent{
    width:690rpx;
    height:50%;
    transform: translate(-50%,-50%);
    left:50%;
    top:50%;
    background: #fff;
    position: absolute;
    box-sizing: border-box;
    padding:30rpx;
  }
  .handtitle{
    font-size:32rpx;
    color:#000;
    text-align: center;
    margin-bottom:10rpx;
  }
  .handWriting{
    border: 2rpx solid #f5f5f5;
    /* background: #f5f5f5; */
    width:100%;
    height:380rpx;
    margin-bottom:40rpx;
   
    
  }
  .writecomfire{
    width:150rpx;
    height:80rpx;
    background: #d33333;
    border-radius: 14rpx;
    color:#fff;
    line-height: 80rpx;
    text-align: center;
  
    display: inline-block;
  }
  .btnbox{
    display: flex;
    justify-content: center;
  }
  .blank{
    margin-right:60rpx;
  }
  .active{
      top: 0;
  }