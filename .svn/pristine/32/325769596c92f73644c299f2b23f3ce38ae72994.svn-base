/* subPages/politics/politics.wxss */
page{
  background: #f5f5f5;
}
.hui{
  border-bottom: 2rpx solid #f5f5f5;
}
.clear{
  clear: both;
}
.politics{
  border-top: 2rpx solid #f5f5f5;
}
.politics-top{
  background: #fff;
}
.politics-top>.title{
  border-bottom: 2rpx solid #f5f5f5;
  padding: 22rpx 0 24rpx 24rpx;
}
.politics-top>.title>image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  vertical-align: sub;
}
.politics-top>.title>text{
  color: #D33333;
  font-weight: bold;
  font-size: 28rpx;
}
.per-list{
  width: 49.5%;
  height: 184rpx;
  float: left;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.per-list:nth-child(2n+1){
  border-right: 2rpx solid #f5f5f5;
}
.per-list>image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin: 30rpx 10rpx 36rpx 10rpx;
}
.per-list>view:last-child>text{
  display: block;
  font-size: 32rpx;
  color: #3A3A3C;
}
.per-list>view:last-child>text:last-child{
  font-size: 28rpx;
  color: #8a8a8a;
}

.politics-middle{
  margin-bottom: 14rpx;
}
.politics-middle>.title,
.politics-bottom>.title{
  border: none;
}
.middle-text>view{
  padding: 0rpx 30rpx 32rpx 30rpx;
}
.hui>view{
  font-size: 28rpx;
  color: #444;
}
.hui>view:first-child{
  margin-top: 20rpx;
}
.hui>view{
  margin-bottom: 24rpx;
}
.hui>view>text{
  color: #8a8a8a;
  line-height: 38rpx;
}
.hui>view:nth-child(2){
  width: 546rpx;
}

.bottom-list>view{
  padding: 0rpx 30rpx 40rpx 30rpx;
}
.list-main{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-main>image{
  width: 220rpx;
  height: 172rpx;
  border-radius: 4rpx;
  margin-right: 24rpx;
}
.list-text{
  width: 446rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list-text>text:first-child{
  font-size: 36rpx;
  color: #444;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.list-text>view:nth-child(2){
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 10rpx;
}
.list-text>text:last-child{
  color: #8a8a8a;
  font-size: 24rpx;
  display: block;
  margin-top: 20rpx;
}
.per-list>view{
  width: 70%;
}