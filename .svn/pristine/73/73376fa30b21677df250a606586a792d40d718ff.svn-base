/* subPages/ablecompetition/ablecompetition.wxss */
/* page{
  background: #f5f5f5;
} */
.lines{
  height: 10rpx;
  background: #f5f5f5;
}
.competition{
  border-top: 2rpx solid #f5f5f5;
}
.competition-top,
.comment{
  background: #fff;
  border-top: 2rpx solid transparent;
  /* margin-bottom: 16rpx; */
}
.comptition-person{
  border-bottom: 2rpx solid #f5f5f5;
}
.competition-title{
  margin: 36rpx 24rpx 6rpx 18rpx;
  display: flex;
  justify-content: space-between;

}
.competition-title>view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.competition-title>view>view>.iconfont,
.competition-title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.competition-title>view>view>text:nth-child(2),
.showCommentss>.competition-title>text:nth-child(2){
  font-size: 28rpx;
  color: #d33333;
  font-weight: 600;
}
.showCommentss>.competition-title{
  display: initial;
}
/* .competition-title>view:last-child{
  float: right;
} */
.competition-title>view:last-child>text{
  font-size: 24rpx;
  color: #dadada;
}
.comptition-person>view,
.person-right{
  display: flex;
  align-items: center;
}
.comptition-person>view>.iconfont{
  font-size: 32rpx;
  margin: 0 48rpx 0 36rpx;
  color: #D33333;
  vertical-align: middle;
}
.person-right>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 32rpx 24rpx 32rpx 0;
}
.person-text>text{
  font-size: 32rpx;
  color: #444;
  margin-bottom: 24rpx;
}
.person-text>view:first-child{
  display: flex;
  justify-content: space-between;
}
.person-text>view:first-child>view{
  font-size: 32rpx;
  color: #444;
}
.star>.icon-star1,.icon-Starlarge,.star{
  font-size: 24rpx;
  color: #d33333;
}
.star>.icon-star1{
  color: #C4C4C4;
}
.star>.iconfont{
  margin-right: 8rpx;
}

.person-list-title{
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.person-list-title>.iconfont{
  width: 36rpx;
  height: 36rpx;
  vertical-align: sub;
  margin-right: 12rpx;
}
.person-list-title>picker:last-child{
  display: inline-block;
}
.person-list-title>picker:last-child,
.person-list-title .picker>text{
  font-size: 28rpx;
  color: #d33333;
  font-weight: 600;
}

/* 全部评论 */
.shareMain {
  width: 100%;
  margin: 30px 0;
}
 
.shareMain .mainList {
  overflow: hidden;
  margin: 0 auto;
  text-align: center;
}
 
.shareMain .title {
  margin: 0 auto;
  text-align: center;
  font-size: 13px;
  margin-top: -13px;
}

.commentss{
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.commentss > .inner{
  background-color: #f3f3f3;
  width: 85%;
  height: 50rpx;
  padding-left: 30rpx;
  font-size: 24rpx;
}
.commentss > .commit{
  color: #3686FB;
}
.showCommentss{
  background-color: #fff;
  width: 100%;
  min-height: 650rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: 100rpx;
}
.showCommentss > .commentsTitle{
  background-image: url('http://www.mlxc365.com/images/zhongyixiang/suibiandayige.png');
  background-repeat: no-repeat;
  background-size: 35rpx;
  padding-left: 60rpx;
  background-position-y: 6rpx;
  font-size: 28rpx;
  color: #259B24;
}
.showCommentss > .itemBox{
  width: 100%;
  margin-top: 45rpx;
  margin-left: 20rpx;
}
.showCommentss > .itemBox > .item{
  display: flex;
  align-items: center;
}
.showCommentss > .itemBox > .item > image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.showCommentss > .itemBox > .item > .userBox {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.showCommentss > .itemBox > .item > .userBox > text:last-child{
  font-size: 24rpx;
  color: #ccc;
}
.showCommentss > .itemBox > .textArea{
  font-size: 28rpx;
  color: #999;
  width: 80%;
  margin: 20rpx 0  40rpx 120rpx;
}

/* 模态框 */
.selectTime {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  transform: translateY(100%);
  transition: all .2s linear;
  background: #fff;
  z-index: 999;
}
.selectTime.show {
  transform: translateY(0);
}
.selectTime > view {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
  position: relative;
}
.selectTime > view > text {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  font-weight: 400;
  background-color: #f59a23;
  width: auto;
  color: #fff;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;

}
.year,
.month{
  text-align: center;
}

