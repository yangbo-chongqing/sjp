/* com/communityactivity/communityactivity.wxss */
.comItem{
  /* width:100%; */
  margin-left:calc(100%/30);
  padding:30rpx 20rpx 30rpx 0;
  border-bottom:2rpx solid #f5f5f5;
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
}
.comItem>image{
  width:240rpx;
  height:232rpx;
  display: block;
  margin-right:20rpx;
}
.itemList{
  width:426rpx;
  height:232rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
 

}
.itemList>.comTitle{
  font-size:32rpx;
  color:#454545;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width:100%;



  
}
.itemList>text{
  font-size:24rpx;
  color:#999999;
}
.itemList>view{
  font-size:24rpx;
  color:#999;
}
.scorll{
  color:#d33333;
}
.itemList> .points > image{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

.itemList> .points > text {
  font-family: PingFang SC;
  font-style: normal;
  font-weight: bold;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #D33333;
}
