/* components/index/Options/Options.wxss */
.indexOptions {
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
}

.indexOptions > .button {
    height: 80%;
    display: flex;
    align-items: center;
    color: #999;
    font-size: 27rpx;
    line-height: 28rpx;
    font-weight: bold;
    position: relative;
    margin-right: 32rpx;
}

.indexOptions > .button:last-of-type {
    margin-right: 0;
}

.indexOptions > .button.active {
    color: #D33333;
}

.indexOptions > .button.active >  .line {
    position: absolute;
    bottom: 0;
    width: 80%;
    height: 6rpx;
    background-color: #D33333;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 100vmax;
}
