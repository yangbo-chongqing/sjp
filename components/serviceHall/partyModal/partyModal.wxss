.partyModal > view > .bottom > view > text {
    color: #48484a;
    font-family: Noto Sans CJK;
    font-size: 32rpx;
    line-height: 28rpx;
}
.bottom >.tel > .iconfont{
    font-size: 52rpx;
    color: #d33333;
    position: fixed;
    right: 30rpx;
}