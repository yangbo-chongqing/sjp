/* components/serviceHall/partyModal/partyModal.wxss */
@import "/assets/css/iconfont.wxss";

.partyModal {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 100%;
    left: 0;
    background-color: rgba(0,0,0,.2);
    transition: all .2s linear;
}
.partyModal.active{
    top: 0;
}
.partyModal > view {
    width: 100%;
    height: 432rpx;
    background-color: #fff;
    border-radius: 20rpx 20rpx 0 0;
    position: absolute;
    bottom: 0;
    left: 0;
}

.partyModal > view > .top {
    width: 100%;
    height: 220rpx;
    position: relative;
    display: flex;
    box-sizing: border-box;
    align-items: center;
    padding-left: 28rpx;
    padding-right: 28rpx;
    padding-top: 10rpx;
}

.partyModal > view > .top > i {
    position: absolute;
    right: 30rpx;
    top: 26rpx;
    font-size: 48rpx;
    color: #8e8e93;
}
.partyModal > view > .top > image {
    width: 122rpx;
    height: 122rpx;
    margin-right: 26rpx;
    border-radius: 50%;
}

.partyModal > view > .top > view {
    width: 80%;
    height: 122rpx;
}

.partyModal > view > .top > view > view {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 50%;
    line-height: 61rpx;
    font-family: Noto Sans CJK;
    font-size: 32rpx;
    color: #8E8E93;
}

.partyModal > view > .top > view > .personName {
    color: #48484a;
    font-weight:600;
}

.partyModal > view > .bottom {
    width: 100%;
    height: 210rpx;
    border-top: 2rpx solid #f5f5f5;
    padding-top: 26rpx;
}

.partyModal > view > .bottom > view {
    width: 100%;
    box-sizing: border-box;
    padding-left: 28rpx;
    font-family: Noto Sans CJK;
    font-size: 32rpx;
    line-height: 28rpx;
    color: #8E8E93;
    margin-bottom: 32rpx;
}
