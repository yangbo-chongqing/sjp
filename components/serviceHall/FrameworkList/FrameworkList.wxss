/* components/serviceHall/FrameworkList/FrameworkList.wxss */
.FrameworkList {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.FrameworkList > view {
    box-sizing: border-box;
    width: 50%;
    height: 182rpx;
    border-right: 2rpx solid #f5f5f5;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
    padding-left: 28rpx;
}

.FrameworkList > view:nth-of-type(2n){
    border-right: 0;
}

.FrameworkList > view > image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.FrameworkList > view > view {
    height: 120rpx;
    width: 60%;
}

.FrameworkList > view > view > view {
    width: 100%;
    height: 50%;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-family: PingFang SC;
    font-size: 28rpx;
    color: #8E8E93;
}

.FrameworkList > view > view > .personName {
    font-family: Noto Sans CJK;
    font-style: normal;
    font-weight: 600;
    font-size: 32rpx;
    color: #3A3A3C;
}