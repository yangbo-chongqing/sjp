/* components/serviceHall/OrgNavBar/OrgNavBar.wxss */
.OrgNavBar{
    width: 100%;
    height: 88rpx;
    overflow-x: auto;
    box-sizing: border-box;
    padding: 30rpx 30rpx 8rpx 30rpx;
    white-space: nowrap;
}

.OrgNavBar::-webkit-scrollbar {
    display: none;
}

.OrgNavBar > view {
    font-family: PingFang SC;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #999999;
    display: inline-block;
    margin-right: 16rpx;
    position: relative;
}

.OrgNavBar > view:last-of-type{
    margin-right: 0;
}

.OrgNavBar > view.active {
    font-weight: bold;
    font-size: 32rpx;
    line-height: 44rpx;
    letter-spacing: -0.024em;
    color: #D33333;
}

.OrgNavBar > view.active > i {
    position: absolute;
    bottom: -14rpx;
    left: 30rpx;
    width: 60%;
    height: 8rpx;
    border-radius: 4rpx;
    background-color: #D33333;
    text-align: center;
}