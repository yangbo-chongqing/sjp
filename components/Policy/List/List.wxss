/* components/Policy/List/List.wxss */
.PolicyList {
    width: 100%;
    box-sizing: border-box;
}

.PolicyList > .item {
    width: 100%;
    height: 232rpx;
    box-sizing: border-box;
    padding: 32rpx 30rpx 40rpx 30rpx;
    border-bottom: 2rpx solid #f5f5f5;
    display: flex;
    align-items: center;
}

.PolicyList > .item > image {
    width: 220rpx;
    height: 160rpx;
    border-radius: 15rpx;
    margin-right: 24rpx;
}

.PolicyList > .item > view {
    width: 446rpx;
    height: 160rpx;
}
/*文章标题*/
.PolicyList > .item > view > text {
    width: 100%;
    /* height: 50%; */
    line-height: 44rpx;
    font-family: PingFang SC;
    font-size: 36rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

/*文章时间和浏览次数*/

.PolicyList > .item > view > view {
    width: 100%;
    height: 50%;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.PolicyList > .item > view > view > .time ,
.PolicyList > .item > view > view > .number{
    font-size: 20rpx;
    line-height: 28rpx;
    color: #999999;
    width: 50%;
}

.PolicyList > .item > view > view > .number {
    display: flex;
    justify-content: flex-end;
}
.PolicyList > .item > view > view .num {
    color: #D33333;
    margin-right: 10rpx;
}