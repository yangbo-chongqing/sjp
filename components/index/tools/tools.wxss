/* components/index/tools/tools.wxss */
.tools {
    width: 690rpx;
    margin: 0 auto;
}

.tools > .top ,
.tools > .bottom{
    width: 100%;
    height: 170rpx;
    display: flex;
    box-sizing: border-box;
}

.tools > .top {
    margin-top: 38rpx;
}

.tools > .bottom {
    box-sizing: border-box;
    margin-bottom: 38rpx;
}

.tools > .top > view ,
.tools > .bottom > view{
    width: 25%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-right:1px solid #f5f5f5;
    box-sizing: border-box;
}
.tools > .bottom > view {
    box-sizing: border-box;
    justify-content: flex-end;
}
.tools > .top > view {
    border-bottom: 1px solid #f5f5f5;
}

.tools > .top > view:nth-of-type(4) ,
.tools > .bottom > view:nth-of-type(4) {
    border-right:0;
}

.tools > .top > view > image,
.tools > .bottom > view > image{
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 24rpx;
}

.tools > .top > view > text ,
.tools > .bottom > view > text{
    font-family: PingFang SC;
    font-style: normal;
    font-weight: normal;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #454545;
}
